<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">


    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_view" />

    <TextView
        android:id="@+id/dashboard_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="117dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="29dp"
        android:text="Dashboard"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="354dp"
        android:layout_height="250dp"
        android:layout_below="@+id/top_view"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="25dp"
        android:columnCount="2"
        android:rowCount="3">

        <androidx.cardview.widget.CardView
            android:layout_width="148dp"
            android:layout_height="150dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="12dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="95dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_temp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperature Overtime" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tempBtn"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="@color/black"
                    android:text="View"
                    app:backgroundTint="#2E0606" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="164dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="12dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Current Temperature"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tempText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="35sp"
                    android:textStyle="bold" />



            </LinearLayout>

            <TextView
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="190dp"
                android:text= "0째"
                android:textColor="#FF0000"
                android:textSize="10dp"/>

            <TextView
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="100dp"
                android:text= "20째"
                android:textColor="#FF0000"
                android:textSize="10dp"/>

            <TextView
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="160dp"
                android:text= "7째"
                android:textColor="#00FF00"
                android:textSize="10dp"/>

            <TextView
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="130dp"
                android:text= "14째"
                android:textColor="#00FF00"
                android:textSize="10dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_thermo_foreground" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/Widget.ProgressBar.Vertical"
                android:layout_width="5dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:progressTint="#00FF00"
                />


        </androidx.cardview.widget.CardView>


    </GridLayout>


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"></androidx.appcompat.widget.Toolbar>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logoutBtn"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="292dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="@color/purple_500"
        android:text="Logout"
        app:backgroundTint="#2E0606" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/chatBtn"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="179dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="@color/purple_500"
        android:text="Chat"
        app:backgroundTint="#2E0606" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/postBtn"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="78dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="240dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="@color/purple_500"
        android:text="Post"
        app:backgroundTint="#2E0606" />


</RelativeLayout>